{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"lib": ["ES2022"]
	}
}
