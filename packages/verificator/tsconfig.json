{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"typeRoots": ["@types"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": ["src/**/*"]
}
